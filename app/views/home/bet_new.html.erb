<div class="container">
  <div class="simple-box"> 
    <h2 class="form-signin-heading">Create New Bet</h2>
    <%= form_for(:bet,url: bet_create_path,:class=>"form-signin") do |f|%>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description ,:class =>'form-control'%>
      </div>
      <div class="field">
        <%= f.label :amount %><br>
        <%= f.number_field :amount ,:class =>'form-control'%>
      </div>
      <div class="field">
        <%= f.label :date_of_bet %><br>
        <%= f.date_field :date_of_bet ,:class =>'form-control'%>
      </div>  
      <div class="actions" style="margin-top:20px;">
        <%= f.submit 'Create Bet',:class => "btn btn-success btn-lg btn-block"%>
      </div>

    <% end %>
  </div>
</div>    