<div class="container">
  <h2 class="form-signin-heading">Sign In</h2>
  <div class="simple-box"> 
  <%= form_for(:user,url: authenticate_user_path,:class=>"form-signin") do |f|%>
      <div class="field">
        <%= f.label :email %><br/>
        <%= f.text_field :email ,:class =>'form-control',:class =>'form-control'%>
      </div>
      <div class="field">
        <%= f.label :password %><br/>
        <%= f.password_field :password ,:class =>'form-control'%><br>
      </div>
      <div class="actions">   
        <%= f.submit "Sign In", class: "btn btn-primary btn-lg btn-block" %>
      </div>         
  <% end %>
  </div>    
</div>