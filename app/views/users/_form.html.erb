<%= form_for(@user,:class=>"form-signin") do |f|%>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name ,:class =>'form-control'%>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email ,:class =>'form-control'%>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password ,:class =>'form-control'%>
  </div>
  <div class="actions" style="margin-top:20px;">
    <%= f.submit @user.new_record? ? "Create my account" : "Update my account",:class => "btn btn-success btn-lg btn-block"%>
  </div>

<% end %>
